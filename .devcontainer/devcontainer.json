{
  "name": "JDK21 Development Dev Container",
  "image": "siakhooi/devcontainer:jdk21",
  "remoteUser": "maui",
  "containerUser": "maui",
  "updateRemoteUserUID": true,
  "features": {},
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.m2,target=/home/maui/.m2,type=bind,consistency=cached",    "source=/mnt/c/Users/sing/Documents/artifacts,target=/artifacts,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "lfm.vscode-makefile-term",
        "vscjava.vscode-java-pack",
        "NicolasVuillamy.vscode-groovy-lint",
        "marlon407.code-groovy",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-spring-boot-dashboard",
        "humao.rest-client",
        "ms-vscode.live-server",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "tim-koehler.helm-intellisense",
        "github.vscode-github-actions"
      ]
    }
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  }
}